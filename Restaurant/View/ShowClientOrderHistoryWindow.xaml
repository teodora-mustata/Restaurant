<Window x:Class="Restaurant.View.ShowClientOrderHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.View"
        xmlns:helpers="clr-namespace:Restaurant"
        mc:Ignorable="d"
        Title="ShowClientOrderHistoryWindow" Height="700" Width="1000">
    <Window.Resources>
        <helpers:OrderItemToTextConverter x:Key="OrderItemToTextConverter" />
        <helpers:OrderItemsToTextConverter x:Key="OrderItemsToTextConverter" />
    </Window.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="Active Orders">
                <StackPanel Margin="10">
                    <ListView ItemsSource="{Binding ActiveOrders}" SelectedItem="{Binding SelectedOrder}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Order ID" DisplayMemberBinding="{Binding OrderID}" Width="80"/>
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DatePlaced}" Width="180"/>
                                <GridViewColumn Header="Price" DisplayMemberBinding="{Binding TotalPrice}" Width="80"/>
                                <GridViewColumn Header="Estimated delivery time" DisplayMemberBinding="{Binding EstimatedDeliveryTime}" Width="180"/>
                                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="120"/>
                                <GridViewColumn Header="Items" Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Items, Converter={StaticResource OrderItemsToTextConverter}}" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button Content="Cancel Selected Order"
                            Command="{Binding CancelOrderCommand}"
                            Margin="0,10,0,0"
                            Width="200"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            IsEnabled="{Binding IsSelectedOrderCancelable}" />
                </StackPanel>
            </TabItem>

            <TabItem Header="All Orders">
                <ListView ItemsSource="{Binding AllOrders}" Margin="10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Order ID" DisplayMemberBinding="{Binding OrderID}" Width="80"/>
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DatePlaced}" Width="180"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding TotalPrice}" Width="100"/>
                            <GridViewColumn Header="Estimated delivery time" DisplayMemberBinding="{Binding EstimatedDeliveryTime}" Width="180"/>
                            <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="120"/>
                            <GridViewColumn Header="Items" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Items, Converter={StaticResource OrderItemsToTextConverter}}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
